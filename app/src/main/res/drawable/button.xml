<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="7dip" />
            <stroke android:width="1dip" android:color="#ff707070" />
            <gradient android:angle="-90" android:startColor="#E3DEE9" android:endColor="#E3DEE9"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="7dip" />
            <stroke android:width="1dip" android:color="#ff707070" />
            <solid android:color="#ff707070"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="7dip" />
            <stroke android:width="1dip" android:color="#ff707070" />
            <gradient android:angle="-90" android:startColor="#DED9E4" android:endColor="#DED9E4" />
        </shape>
    </item>
</selector>